#include "main.h"

    void print_triangle(int size)
    {
        int hi, wid, j;
        
        for (hi = 1; hi <= size; hi++)
        {
            for (j = hi; j <= size; j++)
            {
                putchar(' ');
            }   
            for (wid = 1; wid <= hi; wid++)
            {
                putchar('#');
            }
            putchar('\n');
        }
    }
